<!DOCTYPE html>
<html lang="en">

<head>
  <title>Product Details</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
  <div class="container mt-5">
    <div id="productDetails" class="card">
      <div class="card-body">
        <h5 class="card-title" id="productName"></h5>
        <p class="card-text" id="productDescription"></p>
        <p class="card-text"><small class="text-muted" id="productCategory"></small></p>
        <p class="card-text" id="productPrice"></p>
      </div>
    </div>
  </div>

  <!-- JavaScript to populate product details -->
  <script>
    // Retrieve the selected product ID from local storage
    const productId = localStorage.getItem('selectedProduct');

    // Fetch product details based on the stored product ID
    fetch(`https://fakestoreapi.com/products/${productId}`)
      .then(response => response.json())
      .then(productData => {
        // Populate the product details on the page
        document.getElementById('productName').innerText = productData.title;
        document.getElementById('productDescription').innerText = productData.description;
        document.getElementById('productCategory').innerText = productData.category;
        document.getElementById('productPrice').innerText = `$${productData.price}`;
      })
      .catch(error => console.error('Error fetching product details:', error));
  </script>

  <!-- Bootstrap JS (optional) -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
